<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#f17979">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        tools:context="com.example.alagu.wear.CongView">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ohio's 7th District"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:id="@+id/textV"
            android:textAlignment="center"
            android:textColor="#f17979"
            android:background="#090909"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SENATORS:"
            android:id="@+id/txt"
            android:layout_below="@+id/textV"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#f17979"
            android:background="#090909" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt"
            android:id="@+id/txg"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_margin="2dp">
            <TextView
                android:layout_margin="2dp"
                android:layout_column="0"
                android:layout_row="0"
                android:text="John White \nDemocrat \njohnwhite@g.com \nwww.jw.com \nTweet:Vote for me"
                android:id="@+id/txt1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#68121c"
                android:onClick="getdetailj"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_column="1"
                android:layout_row="0"
                android:id="@+id/image1"
                android:src="@drawable/mr"
                android:layout_margin="2dp"
                android:onClick="getdetailj"/>
            <TextView
                android:layout_margin="2dp"
                android:layout_column="0"
                android:layout_row="1"
                android:text="Bill West \nRepublican \nbillwest@g.com \nwww.bw.com \nTweet:Vote for me"
                android:id="@+id/txt2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#68121c"
                android:onClick="getdetailh"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_column="1"
                android:layout_row="1"
                android:id="@+id/image2"
                android:src="@drawable/hs"
                android:layout_margin="2dp"
                android:onClick="getdetailh"/>
        </GridLayout>
        <TextView
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="REPRESENTATIVE:"
            android:id="@+id/rep"
            android:layout_below="@+id/txg"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#f17979"
            android:background="#090909" />
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rep"
            android:id="@+id/txg2"
            android:rowCount="1"
            android:columnCount="2"
            android:layout_margin="2dp">
            <TextView
                android:layout_margin="2dp"
                android:layout_column="0"
                android:layout_row="0"
                android:text="Amber Law \nRepublican \namb@g.com \nwww.al.com \nTweet:Vote for me"
                android:id="@+id/txt3"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#68121c"
                android:onClick="getdetaild"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_column="1"
                android:layout_row="0"
                android:id="@+id/image3"
                android:src="@drawable/donna"
                android:layout_margin="2dp"
                android:onClick="getdetaild"/>

        </GridLayout>
    </RelativeLayout>
</ScrollView>



